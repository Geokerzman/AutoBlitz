{% include 'inc/header.twig' %}
<a href="{{ URLROOT }}/posts" class="btn btn-light"><i class="fa fa-backward"></i> Back</a>
<div class="card card-body bg-light mt-5">
    <h2>Edit Post</h2>
    <p>Edit a post with this form</p>
    <form action="{{ URLROOT }}/posts/edit/{{ id }}" method="post">
        <div class="form-group">
            <label for="title">Title: <sup>*</sup></label>
            <input type="text" name="title" class="form-control form-control-lg {{ title_err ? 'is-invalid' : '' }}" value="{{ title }}">
            <span class="invalid-feedback">{{ title_err }}</span>
        </div>
        <div class="form-group">
            <label for="body">Body: <sup>*</sup></label>
            <textarea name="body" class="form-control form-control-lg {{ body_err ? 'is-invalid' : '' }}">{{ data.body }}</textarea>
            <span class="invalid-feedback">{{ body_err }}</span>
        </div>
        <input type="submit" class="btn btn-success" value="Submit">
    </form>
</div>
{% include 'inc/footer.twig' %}
